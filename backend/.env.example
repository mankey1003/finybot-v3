# Copy to .env for local development (never commit .env)

# GCP project
GOOGLE_CLOUD_PROJECT=your-project-id

# Fernet key for encrypting Gmail refresh tokens + PDF passwords (POC)
# Generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# TECH DEBT: Replace with Cloud KMS before production (see CLAUDE.md)
FERNET_KEY=

# Random secret for signing OAuth state tokens (CSRF protection)
# Generate: python -c "import secrets; print(secrets.token_hex(32))"
STATE_SECRET_KEY=

# Google OAuth2 credentials (from GCP Console → APIs & Services → Credentials)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# Must match an authorized redirect URI registered in GCP Console
# Local dev:  http://localhost:8080/api/auth/gmail/callback
# Production: https://your-cloud-run-url/api/auth/gmail/callback
OAUTH_REDIRECT_URI=http://localhost:8080/api/auth/gmail/callback

# Frontend URL for post-OAuth redirect
FRONTEND_URL=http://localhost:5173

# Vertex AI region (gemini-3-flash-preview availability)
VERTEX_AI_LOCATION=us-central1

# CORS — comma-separated origins
CORS_ORIGINS=http://localhost:5173

# Google Application Default Credentials are used automatically on Cloud Run.
# For local dev, run: gcloud auth application-default login
